<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jack.dicewars.dice_wars" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".setup.TitleActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".setup.ModeSelectActivity"
            android:label="@string/title_activity_game_mode" >
        </activity>
        <activity
            android:name=".setup.GameConfigActivity"
            android:label="@string/title_activity_game_config" >
        </activity>
        <activity
            android:name=".setup.HowToPlayActivity"
            android:label="@string/title_activity_how_to_play" >
        </activity>
        <activity
            android:name=".setup.OptionsActivity"
            android:label="@string/title_activity_options" >
        </activity>
        <activity
            android:name=".MainGameActivity"
            android:label="@string/title_activity_main_game_activity" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
