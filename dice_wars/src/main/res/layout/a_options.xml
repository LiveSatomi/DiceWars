<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.jack.dicewars.dice_wars.setup.OptionsActivity"
                android:onClick="closeProfileEdit">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Options"
            android:id="@+id/optionsTitle"
            android:textColor="#ff00ff25"
            android:layout_marginTop="35dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="50sp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Online Profile"
            android:id="@+id/onlineProfileText"
            android:width="200dp"
            android:textSize="30sp"
            android:layout_below="@+id/optionsTitle"
            android:layout_toStartOf="@+id/onlineProfile"
            android:layout_marginTop="32dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player"
            android:id="@+id/onlineProfile"
            android:width="200dp"
            android:textSize="20sp"
            android:maxLength="16"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:imeOptions="actionDone"
            android:onClick="editOnlineProfile"
            android:layout_alignBottom="@+id/onlineProfileText"
            android:layout_alignParentEnd="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preferred Color"
            android:id="@+id/preferredColorText"
            android:width="200dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ColorPicker"
            android:id="@+id/colorPalette"
            android:width="200dp"
            android:onClick="openPalette"
            android:layout_alignBottom="@+id/preferredColorText"
            android:layout_alignParentEnd="true"/>



</RelativeLayout>
